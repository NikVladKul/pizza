div(class="popup__bg")
	div.container
		div(class="popup-good")
			div(class="popup-header")
				h1(class="popup-form-good name text-center")
			div(class="row")
				div.col-6
					img(class="popup-form-good img" src="" alt="")
				div.col-6
					p(class="popup-form-good description")
				hr
				h2(class="popup-form-good cost")
			img(src="/img/close.svg" class="close-popup")
			div(class="popup-footer")
				button(href="#" class="btn btn-primary add-to-cart popup-form-good id") В корзину
		div(class="popup-error")
			div(class="popup-header")
				div(class="row")
					div.col-10
						h2(class="popup-error-name")
			div(class="row")
				div.col-12
					h4(class="popup-error-message text-center")
			img(src="/img/close.svg" class="close-popup")
			div(class="popup-footer")
				button(href="#" class="btn btn-primary close-popup-btn") Закрыть

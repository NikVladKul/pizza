doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		link(rel="stylesheet" href="/css/bootstrap.min.css")
		script(src="/js/bootstrap.bundle.min.js") 
		link(rel="stylesheet" href="/css/style.css")
		title Пицца и не только
	body
		div(class="popup__bg")
			div.container
				div(class="popup-good")
					div(class="popup-header")
						h1(class="popup-form-good name text-center")
					div(class="row")
						div.col-6
							img(class="popup-form-good img" src="" alt="")
						div.col-6
							p(class="popup-form-good description")
							h2(class="popup-form-good cost")
					img(src="/img/close.svg" class="close-popup")
					div(class="popup-footer")
						button(href="#" class="btn btn-primary add-to-cart popup-form-good id") В корзину
		header
			div.container
				div(class="row")
					div(class="logo col-2")
						a(href="/") 
							img(src="/img/pizza-logo.svg" alt="Logo")
					div(class="name col-8")
						h1 Пицца и точка
						h4 Любовь уходит, а пиццу можете заказать ВСЕГДА!
					div(class="login col-2")
						a(href="/login") 
							img(src="/img/login.svg" alt="login")
